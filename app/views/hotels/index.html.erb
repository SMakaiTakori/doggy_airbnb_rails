
<%= form_tag("/hotels", method: "get") do  %>
  <%= label_tag :search, "Search For:"  %>
  <%= text_field_tag :search%>
  <%= submit_tag("Search")%>

<%end%>


<ul>
<% @hotels.each do |hotel| %>
 
  <span><strong> Hotel name: <%= hotel.name %></strong> </span>
  <p> Location: <%= hotel.location %></p>
  <p> Amenities and Activities:<%= hotel.activities %></p>
  <button><%= link_to "Reserve your stay today", new_hotel_reservation_path(hotel) %></button><br><br>

<%end%>
</ul><br>



