
<h1>Create your doggy profile below!</h1>

<%= form_for @dog do |f| %>
   <%= f.label :name %>
   <%= f.text_field :name %><br>

   <%= f.label :email %>
   <%= f.email_field :email %><br>

   <%= f.label :password %>
   <%= f.password_field :password %><br>
   
   <%= f.label "Confirm Your Password" %>
   <%= f.password_field :password_confirmation %><br>

   <%= f.submit "Sign Up"  %>
<% end %>