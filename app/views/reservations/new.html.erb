<h1> Booking for Hotel Name</h1>

<h2>We just need a few details to book your reservation, please fill out the form below.</h2>

<%= form_for @reservation do |f| %>
   <%= f.label :date  %>
   <%= f.text_field :date %><br>

   <%= f.label :time %>
   <%= f.text_field :time %><br>

   <%= f.hidden_field :hotel_id %><br>

   <%= f.fields_for :dogs do |d| %> 
      <%= d.label :name  %>
      <%= d.text_field :name %>

       <%= d.label :age  %>
      <%= d.text_field :age %>

       <%= d.label :email  %>
      <%= d.text_field :email %>

      <%= d.label :breed %>
      <%= d.text_field :breed%>

      <%= d.label "Owner's Name"%>
      <%= d.text_field :owner %>

      <%= d.label :phone  %>
      <%= d.text_field :phone %>

      <%= d.label :biography  %>
      <%= d.text_field :biography %>
   <%end%>
   
   <%= f.submit "Book Now!"  %>
<% end %>